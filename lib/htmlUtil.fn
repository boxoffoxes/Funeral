def page [ prepend pageHeader append pageFooter ]

def subsubsection [
    div addClass "subsubsection"
    deleteAttr heading=
    doif
        'drop
        [ prependContent h3 ]
    *null
    *getAttr heading=
]
def subsection [
    div addClass "subsection"
    deleteAttr heading=
    doif
        'drop
        [ prependContent h2 ]
    *null
    *getAttr heading=
]

def section [
    div addClass "section"
    deleteAttr heading=
    doif
        'drop
        [
            tocEntry li a
            setAttr href= 
            swap dip [
                cons .# *getAttr id= 
                prependContent h1
            ] dup
        ]
    *null
    *getAttr heading=
]
