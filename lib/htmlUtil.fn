def _no_label [
    dip 'drop
]
def _label_before [ append dip '_label ]
def _label_after [ prepend dip '_label ]
def _label [
    doif -- create an optional label for an input (text, file...)
        []
        'label
    *null
]

def _options [
    cons blankOption
    doif
        [[] drop]
        []
    = "word" type quote dup
    stringToWord *getAttr name=
]
def blankOption quote option [ value="" "--- Select" ]


def _TOC '[]

def tocEntry [
    def '_TOC quote append _TOC
]

def _alt ["oddRow"]

def alternate [
    def '_alt quote
    ifte
        "evenRow"
        "oddRow"
    = "oddRow" dup _alt
]




